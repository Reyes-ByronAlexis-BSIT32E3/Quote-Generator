<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Quote Generator</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />

    <style>
        body {
            background-color: #F8F9FA;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin-top: 300px;
            background-color: #ffffff;
            border-radius: 12px !important;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        header {
            margin-bottom: 20px;
            border-radius: 9px;
            overflow: hidden; 
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            color: #ffffff;
            display: block;
            margin: auto;
            text-align: center;
        }



        #generateButton {
            width: 100%;
            margin: 10px auto;
            display: block;
            padding: 10px 0; 
            font-size: 16px;
            font-weight: bold;
            border: 1px solid #343A40;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            color: #000;
            border-radius: 5px;
            background-color: #fff;
            cursor: pointer;
            transition: background-color 0.2s ease, color 0.2s ease;
        }

            #generateButton:hover {
                background-color: #F6F6F6;
                color: black;
            }


        footer {
            margin-top: 20px;
            text-align: center;
            color: #6c757d;
        }

        .quote-container {
            text-align: center;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .quote-text {
            font-size: 26px;
            font-style: italic !important;
            color: #333333;
            margin-bottom: 20px;
            text-align: center;
        }


        .quote-author {
            font-size: 16px;
            font-weight: bold;
            color: #555555;
        }
    </style>
</head>
<body>

    <div class="container">

        <header>
            <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
                <a class="navbar-brand" href="#">Random Quote Generator</a>
            </nav>
        </header>

        <div class="main-content">
            @RenderBody()
        </div>
        <button class="btn btn-light" id="generateButton">Generate a quote</button>
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - Quote Generator - BSIT32E3</p>
        </footer>

    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#generateButton').click(function () {
                window.location.href = '/Quote/Index';
            });
        });
    </script>

</body>
</html>
